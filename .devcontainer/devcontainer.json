{
  "name": "Aiolos OT Dev",
  "build": {
    "dockerfile": "C:/AiolosOT/docker/Dockerfile.server",
    "context": "C:/AiolosOT/docker"
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined",
    "-p", "1234:1234",
    "-p", "7171:7171",
    "-p", "7172:7172",
    "-v", "C:/AiolosOT/aiolos-server:/workspace:cached"
  ],
  "workspaceFolder": "/workspace",
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-vscode.cpptools",
    "ms-vscode.cmake-tools"
  ],
  "remoteUser": "root"
}